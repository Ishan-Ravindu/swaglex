NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-key-min-32-characters
SESSION_MAX_AGE=86400000

# JWT Configuration
JWT_ENABLED=true
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-characters
JWT_EXPIRES_IN=24h

# Database Configuration (PostgreSQL)
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swaglex_advanced
DB_USER=swaglex
DB_PASSWORD=your-database-password
DB_SSL=false
DB_POOL_MAX=20
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Caching
CACHING_ENABLED=true
CACHING_PROVIDER=redis
CACHING_TTL=300

# Security
RATE_LIMITING_ENABLED=true
RATE_LIMITING_WINDOW_MS=900000
RATE_LIMITING_MAX_REQUESTS=1000
HELMET_ENABLED=true

# Authentication Providers
ALLOW_REGISTRATION=false
GOOGLE_AUTH_ENABLED=true
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_NAME=./logs/swaglex-%DATE%.log

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google
ANALYTICS_TRACKING_ID=GA-XXXXX-X

# Swagger UI
SWAGGER_THEME=dark

# CORS
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
